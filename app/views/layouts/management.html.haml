!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "Bootply", :name => "generator"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}/
    %link{:href => "/img/favicon-32x32.png", :rel => "icon", :sizes => "32x32", :type => "image/png"}/
    = stylesheet_link_tag "bootstrap_and_overrides"
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag "dashboard"
    = csrf_meta_tags
    %title Dashboard Ielts Asistant
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} Ielts Asistant
        .navbar-collapse.collapse
          = render partial: '/application/management/nav'
    .container-fluid
      .row.row-offcanvas.row-offcanvas-left
        #sidebar.col-sm-3.col-md-2.sidebar-offcanvas{:role => "navigation"}
          = yield :sidebar
        .col-sm-9.col-md-10.main
          / toggle sidebar button
          %p.visible-xs
            %button.btn.btn-primary.btn-xs{"data-toggle" => "offcanvas", :type => "button"}
              %i.fa.fa-chevron-left

          - if notice
            .alert.alert-info.alert-dismissible
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
                %span{"aria-hidden" => "true"} ×
              = notice
          - if alert
            .alert.alert-warning.alert-dismissible
              %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
                %span{"aria-hidden" => "true"} ×
              = alert

          = yield
      /row
    /.container
    %footer
      %p.pull-right ©2014 Company

    = javascript_include_tag 'jquery'
    = javascript_include_tag 'jquery_ujs'
    = javascript_include_tag 'twitter/bootstrap'
    = javascript_include_tag 'dashboard'
