                  %li{class:('active' if params[:controller] == 'registrations' &&  params[:action] == 'new')}
                    = link_to "登录" , '/users/sign_in'
                - else
                  %li.dropdown{class:('active' if params[:controller] == 'registrations' or params[:controller] == 'profiles')}
                    %a.dropdown-toggle{:href => "#"}
                      我的账号
                    %ul.dropdown-menu
                      %li
                        %a{href: '#/orders', 'data-toggle' => "modal", 'data-target' => "#shopApp"}
                          我的订单
                      %li
                        = link_to current_user.email, '/users/edit'
                      %li
                        = link_to '个人资料', '/profile'
                      %li
                        = link_to "注销", destroy_user_session_path, :method => :delete
                  = render partial: 'carts_menu'

      .main{:role => "main"}
        .container
