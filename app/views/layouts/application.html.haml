                  = link_to "主页" , '/'
                %li.dropdown{class:('active' if params[:controller] == 'products')}
                  %a.dropdown-toggle{:href => "/products/list"}
                    趴趴雅思
                  %ul.dropdown-menu
                    - @products.each do |product|
                      %li
                        = link_to product.title, "/products/#{ URI.encode(product.title) }"
                %li
                  = link_to "口语练习平台" , 'http://training.ieltsassistant.com/', target: '_blank'
                %li
                  = link_to "烤鸭论坛" , 'http://sns.ieltsassistant.com/', target: '_blank'
                %li{class:('active' if params[:controller] == 'pages' &&  params[:action] == 'faq')}
                  = link_to "常见问题" , URI.encode('/常见问题')
