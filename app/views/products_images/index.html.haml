%h1
  Listing images of
  = @product.title

%p
  = link_to 'New Products image', new_products_image_path + "?product_id=#{ @product.id }", class: 'btn btn-primary'

%ul.thumbnails
  - @products_images.each do |image|
    %li.span3
      .thumbnail
        = link_to (image_tag image.file.url), image.file.url, target: '_blank'
        Order:
        = image.ordering ? image.ordering : '0'
        = link_to 'Edit', edit_products_image_path(image), class: 'btn'
        = link_to 'Destroy', image, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

= link_to 'Back', "/products"
