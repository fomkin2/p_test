.container
  .row
    .col-md-12
      - if devise_error_messages!.present?
        .alert.alert-warning.alert-dismissible
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          = devise_error_messages!
      .featured-boxes
        .row
          .col-sm-6.col-md-offset-3
            .featured-box.featured-box-primary.align-left.mt-xlg{:style => "height: 327px;"}
              .box-content
                %h4.heading-primary.text-uppercase.mb-md 忘记密码？
                = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
                  .row
                    .form-group
                      .col-md-12
                        %label E-mail
                        = f.email_field :email, autofocus: true, class: "form-control input-lg"
                  .row
                    .col-md-12
                      %input.btn.btn-primary.pull-right.mb-xl{"data-loading-text" => "Loading...", :type => "submit", :value => "找回密码"}/
                      = render "users/shared/links"
