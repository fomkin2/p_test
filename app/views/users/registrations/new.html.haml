.container
  .row
    .col-md-12
      - if devise_error_messages!.present?
        .alert.alert-warning.alert-dismissible
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          = devise_error_messages!
      .featured-boxes
        .row
          .col-sm-6.col-md-offset-3
            .featured-box.featured-box-primary.align-left.mt-xlg{:style => "height: 327px;"}
              .box-content
                %h4.heading-primary.text-uppercase.mb-md 注册一个新账号
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  .row
                    .form-group
                      .col-md-12
                        %label E-mail
                        = f.email_field :email, autofocus: true, class: "form-control input-lg"
                  .row
                    .form-group
                      .col-md-6
                        %label 密码
                        - if @minimum_password_length
                          %em
                            (长度至少#{@minimum_password_length}位)
                        = f.password_field :password, autocomplete: "off", class: "form-control input-lg"
                      .col-md-6
                        %label 确认密码
                        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg"
                  .row
                    .col-md-12
                      %input.btn.btn-primary.pull-right.mb-xl{"data-loading-text" => "Loading...", :type => "submit", :value => "注册"}/
                      = render "users/shared/links"
