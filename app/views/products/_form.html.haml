= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title
  .control-group
    = f.label :price, class: 'control-label', type: 'integer'
    .controls
      = f.text_field :price
  .control-group
    = f.label :link, class: 'control-label'
    .controls
      = f.text_field :link
  .control-group
    = f.label :introduction, class: 'control-label'
    .controls
      = f.text_area :introduction, rows: 5, class: 'input-xxlarge'
  .control-group
    = f.label :description, class: 'control-label'
    .controls
      = f.text_area :description, class: 'tinymce', rows: 10
  .control-group
    = f.label :information, class: 'control-label'
    .controls
      = f.text_area :information, class: 'tinymce', rows: 10
  .control-group
    .controls
      %label.checkbox
        published
        = f.check_box :published
  .actions
    = f.submit 'Save', class: "btn btn-primary"
